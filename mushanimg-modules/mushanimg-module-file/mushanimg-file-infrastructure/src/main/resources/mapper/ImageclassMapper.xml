<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hzb.file.imageclass.gatewayimpl.database.ImageclassMapper">

    <resultMap id="BaseResultMap" type="com.hzb.file.imageclass.gatewayimpl.database.dataobject.ImageclassDO">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="imgclassName" column="imgclass_name" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,imgclass_name,user_id,
        create_time,update_time
    </sql>

    <select id="selectImgIdsByImageclassId" resultType="java.lang.Long">
        select imgdata_id as imgdataId
        from ms_imgclass_imgdata
        where imgclass_id in
        <foreach collection="list" item="imageclassId" open="(" separator="," close=")">
            #{imageclassId}
        </foreach>
    </select>
    <delete id="deleteImageclassByImgIds">
        delete from ms_imgclass_imgdata
        where imgdata_id in
        <foreach collection="list" item="imgId" open="(" separator="," close=")">
            #{imgId}
        </foreach>
    </delete>
    <delete id="deleteImgByImageclassId">
        delete from ms_imgclass_imgdata
        where imgclass_id in
        <foreach collection="list" item="imageclassId" open="(" separator="," close=")">
            #{imageclassId}
        </foreach>
    </delete>
</mapper>
